<!-- #filter (start) -->
<div id="filter" data-spy="affix" data-offset-top="70">
  <div class="bd">
    <form method="get" class="form-inline" role="form">
      <div class="row">
        <div class="form-group col-md-6 col-sm-6">
          <label class="control-label" for="location">Countries: </label>
          <select id="countries" name="countries" ui-select2="{allowClear: false}" data-placeholder="Countries" size="1" multiple
                  class="form-control" ng-model="countries" ng-change="updateUsers()" style="width:100%;">
            <option value="{{country.value}}" ng-repeat="country in countryList">{{country.name}}</option>
          </select>
        </div>
        <div class="form-group col-md-6 col-sm-6">
          <label class="control-label" for="language">Languages: </label>
          <select id="language" name="language" ui-select2="{allowClear:false}" data-placeholder="Programming Languages" size="1" multiple
                  class="form-control" ng-model="languages" ng-change="updateUsers()" style="width:100%;">
            <option value="{{language.value}}" ng-repeat="language in languageList">{{language.name}}</option>
          </select>
        </div>
      </div>
    </form>
  </div>
</div>
<!-- #filter (end) -->
